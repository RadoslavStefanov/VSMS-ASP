@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark">@User.Identity?.Name!<i class="fa fa-user fa-lg" style="color:firebrick; margin-left:5px;"aria-hidden="true"></i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/AdminPanel/Show"><i class="fa fa-id-card-o fa-lg" style="color:firebrick;" aria-hidden="true"></i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Work/Main"><i class="fa fa-money fa-lg" style="color:firebrick;" aria-hidden="true"></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark"><i class="fa fa-sign-out fa-lg" style="color:firebrick;" aria-hidden="true"></i></button>
        </form>
    </li>  
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Users/Login">Login</a>
    </li>
}
</ul>
