@using VSMS.Infrastructure.Data.Models
@model List<Categories>
<style>
    .dropSelector
    {
        display: flex;
        width: 100%;
        border-color: #c9bebe;
    }
    .btn-primary
    {
        background-color:firebrick;
        border-color:firebrick;
    }
    .avatar
    {
        width:100%;
        height:100%;
        max-width:305px;
        max-height:240px;
        min-width:305px;
        min-height:240px;
        margin-top:10px;
        margin-bottom: 10px;
        text-align:center;
    }

    .container
    {
        margin-top:5%;
    }

    #anchor,#anchor:hover
    {
        text-decoration:none;
        color:white;
    }

</style>

<div class="container">      
      <!-- edit form column -->
      <div>
        <h3 style="text-align: center;">Създаване на Продукт</h3>
        
        <form method="post" class="form-horizontal" role="form">
            <div class="row">
      <!-- left column -->
      <div>
        <div style="text-align: center;">
          <img src="https://bitsofco.de/content/images/2018/12/broken-1.png" id = "avatar" class="avatar img-circle" onerror="this.src='https://bitsofco.de/content/images/2018/12/broken-1.png'">      
        </div>
      </div>
          <div class="form-group">
            <div>
              <label class="col-lg-3 control-label">Снимка* :</label>
              <input type="text" name="ImageUrl" name="ImageUrl" id="imageUrlField" placeholder="Попълни адрес към снимка..." class="form-control" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Име* :</label>
            <div >
              <input class="form-control required" name="Name" type="text" placeholder="Име на продукта" required>
            </div>
          </div>
          <div class="form-group">
              <label class="col-lg-3 control-label">Категория* :</label>
            <select name="Category" class="required dropSelector" required>
                <option value=""></option>
                @foreach (var catg in Model)
                {<option value="@catg.Name">@catg.Name</option>}
	        </select>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Описание :</label>
            <div>
              <input class="form-control" name="Description" type="text" placeholder="Кратко описание на продукта...">
            </div>
          </div>
          <div class="form-group">
              <label class="col-lg-3 control-label">Килограми* :</label>
            <select name="Kilograms" class="required dropSelector" required>
	            <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
                <option value="30">30</option>
                <option value="35">35</option>
                <option value="40">40</option>
                <option value="45">45</option>
	        </select>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Цена* :</label>
            <div >
              <input class="form-control required" name="Price" id="price" type="text" placeholder="Цена в лева за чувал/опаковка..." required>
            </div>
          </div>
          <div class="form-group">
            <div style="margin-top:10px;text-align: center;">
              <button class="btn btn-secondary"><a id="anchor" href="/AdminPanel/Show?arg=ListProducts">Отказ</a></button>
              <span></span>              
              <input type="submit" id="submit" class="btn btn-primary" value="Запази">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>

<script src="~/js/ProductsCreate.js"></script>