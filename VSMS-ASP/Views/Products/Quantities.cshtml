
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Списък Наличности</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Основна страница</a></li>
                    <li class="breadcrumb-item active">Наличности</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Продукт</th>
                                <th>Наличност</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Products)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    @if (item.Quantity <= 10)
                                    {<td style="background-color:#f01855;color:white;font-weight:200;">@item.Quantity</td> }
                                    else if (item.Quantity <= 25)
                                    {  <td style="background-color:#e6d51c">@item.Quantity</td> }
                                    else
                                    { <td>@item.Quantity</td> }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</section>
